<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.dao.IUserDao">
    <select id="getUserById" parameterType="int" resultType="com.test.bean.User">
        SELECT * from user WHERE id = #{id}
    </select>

    <insert id="insertUser" parameterType="com.test.bean.User">
        <selectKey resultType="int" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into user (`name`, `password`, `age`) VALUES (#{name},#{password},#{age})
    </insert>

    <select id="getUsersByList" parameterType="com.test.bean.QueryVo" resultType="com.test.bean.User">
        SELECT * FROM user
        <where>
            <if test="idList != null">
                AND id in
                <foreach collection="idList" item="id" open="(" close=")" separator=",">
                    #{id}
                </foreach>
            </if>
        </where>
    </select>

</mapper>